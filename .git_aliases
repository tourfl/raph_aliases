alias g="git"
alias gs="git status"
alias gc="git commit"
alias gca="git commit -a"
alias gl="git log --oneline"
alias ga="git add"
alias gaa="git add *"
alias gb="git branch"
alias gck="git checkout"

__git_global_aliases() 
{
    git config --global --replace-all alias.ck 'checkout'
    git config --global --replace-all alias.amend 'commit --amend'
    git config --global --replace-all alias.amendauto 'commit -a --amend --no-edit'
    git config --global --replace-all alias.master 'checkout master'
}